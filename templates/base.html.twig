<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <style>
        body {
            background: url("https://placehold.co/100x100/FFFFFF/EFEFEF/png?text=50993");
        }
    </style>
    {# Link do Bootstrap CSS #}
    <link rel="stylesheet" href="{{ bootstrap_css }}">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
</head>
<body>



<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">My Weather App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>

        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_miejscowosc_index') }}">Lokalizacje</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_dane_meteorologiczne_index') }}">Prognozy</a>
                </li>
            </ul>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_logout') }}">Logout</a>
            {% else %}
                <a href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </div>
    </div>
</nav>

<div class="container mt-4">
    {% block body %}{% endblock %}
</div>

{# Link do Bootstrap JS #}
<script src="{{ bootstrap_js }}"></script>
<script src="{{ asset('build/app.js') }}"></script>

</body>
</html>
